{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "ES5",
    "jsx": "preserve",
    "indent": 2,
    "lib": [
      "dom",
      "es5",
      "es2015"
    ]
  },
  "include": [
      "./components/**/*.{ts,tsx}",
      "./preview/**/*.{ts,tsx}"
  ],
  "formatCodeOptions": {
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "reportFiles": [
        "./components/**/*.{ts,tsx}"
    ]
  }
}
